<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">



            <androidx.viewpager.widget.ViewPager
                android:foregroundGravity="top"
                android:layout_centerInParent="false"

                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"

                android:id="@+id/slider"
                android:layout_width="match_parent"

                android:layout_height="350dp"

                >

            </androidx.viewpager.widget.ViewPager>






    <LinearLayout
        android:id="@+id/bottom_lane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">







    <TextView
        android:id="@+id/nearby"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nearby Price Differences"
        android:gravity="center"
        android:textSize="30sp">
    </TextView>

    <LinearLayout

        android:id="@+id/price_field"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal"


            >


            <TextView
                android:id="@+id/lowest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textAlignment="center"
                android:text="Lowest" />

            <TextView
                android:id="@+id/differences"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Differences" />

            <TextView
                android:id="@+id/height"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="High" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/price1"
                android:paddingTop="7dp"
                android:layout_marginLeft="40dp"
                android:text="3.5"
                android:layout_width="match_parent"
                android:textColor="#8b8b8b"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/price_icon"

                />
            <TextView
                android:layout_marginLeft="100dp"
                android:paddingTop="7dp"
                android:textColor="#8b8b8b"
                android:id="@+id/price2"
                android:text="1.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/price_icon"
                android:textAlignment="center"
                />
            <TextView
                android:paddingTop="7dp"
                android:id="@+id/price3"
                android:text="4.5"
                android:textColor="#8b8b8b"
                android:layout_marginLeft="95dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/price_icon"
                android:textAlignment="center"
                />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/information_field"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <TextView
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/car_icon"
            android:id="@+id/car_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <TextView
            android:layout_marginTop="8dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/time_icon"
            android:id="@+id/lastfuel_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/cretidcart_icon"
            android:drawablePadding="8dp"
            android:id="@+id/price_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/liter_icon"
            android:drawablePadding="8dp"
            android:id="@+id/liter_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </LinearLayout>





    </LinearLayout>


</LinearLayout>