<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    tools:context=".ProfilFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="@drawable/border"
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >



                <TextView

                    android:textColor="#FFFFFF"
                    android:paddingTop="10dp"
                    android:textSize="20dp"
                    android:id="@+id/CreateProfile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"

                    android:gravity="center"
                    android:text="Update Profile"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/first">

                <EditText
                    android:textColor="#000000"
                    android:drawableLeft="@drawable/name_icon"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/nameSurnameUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawablePadding="8dp"
                    android:inputType="textPersonName"
                    android:background="@drawable/textinputshape"/>

                <EditText
                    android:textColor="#000000"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/phoneUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawableLeft="@drawable/phone_icon"
                    android:drawablePadding="8dp"
                    android:inputType="phone"
                    android:background="@drawable/textinputshape"
                    />

                <EditText
                    android:textColor="#000000"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/gmailUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawableLeft="@drawable/mail_icon"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/textinputshape"/>
                <RadioGroup
                    android:id="@+id/radiogroupUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <RadioButton
                        android:id="@+id/first_radioUp"
                        android:textColor="#FFFFFF"
                        android:text="Gas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/second_radioUp"
                        android:textColor="#FFFFFF"
                        android:text="Diesel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>
                    <RadioButton
                        android:id="@+id/third_radioUp"
                        android:textColor="#FFFFFF"
                        android:text="Gasoline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    </RadioButton>
                </RadioGroup>

                <LinearLayout
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/third"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="20dp">


                    <Spinner
                        android:id="@+id/sign_favUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:popupBackground="#FFFFFF"
                        android:textColor="#FFFFFF"



                        />

                    <Spinner
                        android:id="@+id/cartypeUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:popupBackground="#FFFFFF"


                        />
                </LinearLayout>

                <EditText
                    android:textColor="#000000"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:id="@+id/sign_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:drawableLeft="@drawable/pass_icon"
                    android:inputType="textPassword"
                    android:background="@drawable/textinputshape"/>

                <Button
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginVertical="8dp"
                    android:textColor="#FFFFFF"
                    android:id="@+id/update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Update"
                    android:background="@drawable/buttonshape"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>